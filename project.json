{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "syncVersions": true,
        "skipProjectChangelog": true,
        "dryRun": false,
        "push": true,
        "commitMessageFormat": "chore: publish {version}",
        "postTargets": ["deploy-npm", "deploy-github"]
      },
      "configurations": {
        "prerelease": {
          "releaseAs": "prerelease",
          "skipCommit": true,
          "skipRootChangelog": true,
          "postTargets": ["deploy-npm", "cleanup-prerelease"]
        }
      }
    },
    "deploy-npm": {
      "executor": "nx:run-commands",
      "dependsOn": [
        {
          "projects": [
            "elements",
            "elements-angular",
            "elements-react",
            "elements-vue"
          ],
          "target": "build"
        }
      ],
      "options": {
        "commands": [
          "npm publish -w packages/elements --dry-run",
          "npm publish -w packages/elements-angular --dry-run",
          "npm publish -w packages/elements-react --dry-run",
          "npm publish -w packages/elements-vue --dry-run"
        ],
        "parallel": false
      }
    },
    "deploy-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    },
    "cleanup-prerelease": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "git reset --hard",
            "forwardAllArgs": false
          }
        ]
      }
    }
  },
  "tags": []
}
