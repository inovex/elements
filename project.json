{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "syncVersions": true,
        "skipProjectChangelog": true,
        "dryRun": true,
        "postTargets": [
          "deploy-npm",
          "deploy-github"
        ]
      }
    },
    "deploy-npm": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npm publish -w packages/elements --dry-run",
          "npm publish -w packages/elements-angular --dry-run",
          "npm publish -w packages/elements-react --dry-run",
          "npm publish -w packages/elements-vue --dry-run"
        ],
        "parallel": false
      }
    },
    "deploy-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    }
  },
  "tags": []
}
