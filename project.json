{
  "name": "workspace",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "release": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "node ./scripts/release.js dryRun={args.dryRun} canary={args.canary}"
      },
      "configurations": {
        "canary": {
          "args": "--canary=true"
        },
        "dryRun": {
          "args": "--dryRun=true"
        }
      }
    }
  },
  "implicitDependencies": [
    "elements",
    "elements-angular",
    "elements-react",
    "elements-vue"
  ],
  "tags": []
}
