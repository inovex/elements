{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**", ".next/**", ".angular/**", ".stencil/**"]
    },
    "test": {
      "dependsOn": ["^build", "build"],
      "outputs": ["test-results/**", "playwright-report/**"]
    },
    "lint": {},
    "clean": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "cache": false
    },
    "schematics": {
      "dependsOn": ["build"]
    }
  }
}
