{
  "name": "storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/storybook/src",
  "projectType": "application",
  "tags": [],
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "{projectRoot}/../elements/dist/**/*"]
  },
  "targets": {
    "build": {
      "outputs": ["{projectRoot}/dist"],
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/storybook",
        "command": "storybook build -c config -o dist",
        "color": true
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/storybook"
      },
      "defaultConfiguration": "dev",
      "configurations": {
        "dev": {
          "command": "storybook dev -p 6006 -c config --quiet --no-version-updates"
        },
        "prod": {
          "command": "storybook build -p 6006 -c config --quiet --no-version-updates"
        }
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/storybook",
        "command": "eslint src"
      },
      "configurations": {
        "fix": {
          "command": "eslint src --fix"
        }
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/storybook",
        "command": "shx rm -rf dist"
      },
      "configurations": {
        "nodejs": {
          "command": "shx rm -rf node_modules"
        }
      }
    }
  }
}
