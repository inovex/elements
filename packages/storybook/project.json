{
  "name": "storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/storybook/src",
  "projectType": "application",
  "tags": [],
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "{projectRoot}/../elements/dist/**/*"]
  },
  "targets": {
    "build": {
      "executor": "@nx/storybook:build",
      "options": {
        "configDir": "{projectRoot}/config",
        "outputDir": "{projectRoot}/dist",
        "disableTelemetry": true
      },
      "defaultConfiguration": "dev",
      "configurations": {
        "dev": {
          "quiet": false
        },
        "prod": {
          "quiet": true
        }
      }
    },
    "start": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 6006,
        "configDir": "{projectRoot}/config",
        "outputDir": "{projectRoot}/dist",
        "disableTelemetry": true
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/storybook",
        "command": "eslint src"
      },
      "configurations": {
        "fix": {
          "command": "eslint src --fix"
        }
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/storybook",
        "command": "shx rm -rf dist"
      },
      "configurations": {
        "nodejs": {
          "command": "shx rm -rf node_modules"
        }
      }
    },
    "test": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/dist/.playwright/packages/storybook"],
      "options": {
        "config": "packages/storybook/playwright.config.ts",
        "browser": "chromium",
        "timeout": 15000
      },
      "defaultConfiguration": "headless",
      "configurations": {
        "ci": {
          "forbidOnly": true,
          "globalTimeout": 30000,
          "headed": false,
          "quiet": true,
          "passWithNoTests": false,
          "skipInstall": true
        },
        "headless": {
          "headed": false
        },
        "ui": {
          "ui": true
        },
        "debug": {
          "headed": true,
          "debug": true
        }
      }
    }
  }
}
