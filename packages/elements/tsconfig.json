{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "DOM.Iterable", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "types": ["jest"],
    "skipLibCheck": true
  },
  "ts-node": { // to make our scripts work
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["src", "types/jsx.d.ts", "output-targets", "scripts"],
  "exclude": ["node_modules"]
}
