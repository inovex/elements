{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "strict": false,
    "noImplicitReturns": false,
    "declaration": false,
    "module": "commonjs",
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "target": "es2017",
    "noImplicitAny": false,
    "jsxFactory": "h",
    "types": ["jest"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "output-targets/**/*.ts",
    "output-targets/**/*.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
