{
  "name": "elements",
  "sourceRoot": "packages/elements/src",
  "projectType": "library",
  "tags": [],
  "namedInputs": {
    "default": ["{projectRoot}/src/**/*", "{projectRoot}/stencil.config.ts"],
    "production": [
      "default",
      "!{projectRoot}/src/**/*.e2e.ts",
      "!{projectRoot}/src/**/*.e2e.ts"
    ]
  },
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["production"],
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "packages/elements",
        "command": "stencil build --docs",
        "color": true
      },
      "configurations": {
        "ci": {
          "command": "stencil build --ci --docs"
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "cwd": "packages/elements",
        "commands": [
          "cross-env NODE_ENV=development stencil build --docs --watch"
        ]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/elements",
        "command": "eslint src"
      },
      "configurations": {
        "fix": {
          "command": "eslint src --fix"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/elements",
        "command": "stencil test --e2e"
      },
      "configurations": {
        "watch": {
          "command": "stencil test --e2e --watch"
        },
        "update": {
          "command": "stencil test --e2e -u ./"
        }
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/elements",
        "command": "shx rm -rf dist"
      },
      "configurations": {
        "nodejs": {
          "command": "shx rm -rf node_modules"
        }
      }
    },
    "icons": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/elements",
        "command": "ts-node scripts/integrateIcons.ts"
      },
      "configurations": {
        "optimize": {
          "command": "svgo -f ./src/assets/ino-icon --config ../../svgo.config.js"
        }
      }
    }
  }
}
