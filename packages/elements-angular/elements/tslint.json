{
  "extends": [
    "../tslint.json",
    "tslint-config-prettier"
  ],
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "lib",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "lib",
      "kebab-case"
    ],
    "class-name": false
  },
  "linterOptions": {
    "exclude": [
      "src/directives/angular-component-lib/utils.ts"
    ]
  }
}
