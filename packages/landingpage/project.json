{
  "name": "landingpage",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "/pages",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "prod",
      "options": {
        "outputPath": "{projectRoot}/out",
        "nextConfig": "{projectRoot}/next.config.mjs"
      },
      "configurations": {
        "dev": {
          "debug": true
        },
        "prod": {}
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "dev",
      "options": {
        "buildTarget": "landingpage:build",
        "dev": true
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "nx run landingpage:build",
          "serve {projectRoot}/out"
        ]
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/landingpage",
        "command": "next lint"
      },
      "configurations": {
        "fix": {
          "command": "next lint --fix"
        }
      }
    },
    "clean": {
      "configurations": {
        "dist": {
          "commands": ["shx rm -rf out", "shx rm -rf .next"]
        }
      }
    }
  }
}
