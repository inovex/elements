{
  "private": true,
  "description": "This is a Monorepo root package which is used to execute build scripts.",
  "engines": {
    "node": ">=14.17"
  },
  "scripts": {
    "build": "lerna run build --ignore=elements-angular-example && lerna run build --scope=elements-angular-example",
    "start": "(shx test -d ./packages/elements/dist || lerna run build --scope=@inovex.de/elements) && lerna run dev --parallel",
    "changelog": "yarn changelog:root && yarn changelog:pkgs",
    "changelog:root": "standard-version",
    "changelog:pkgs": "lerna exec --concurrency 1 --stream 'standard-version'",
    "test": "lerna run test",
    "test:update": "lerna run test:update",
    "clean": "yarn clean:packages && yarn clean:artifacts && yarn clean:root",
    "clean:packages": "lerna clean --yes",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:root": "shx rm -rf node_modules",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "format": "yarn prettier --write '**/*.{js,jsx,ts,tsx,md,html,css,scss}'",
    "lerna:version": "lerna version --conventional-commits --no-changelog",
    "preversion": "yarn build && yarn test",
    "version": "node scripts/bumprootversion.js && yarn changelog",
    "new:component": "node scripts/newComponent.js",
    "postversion": "git add -A",
    "publish:yalc": "node ./scripts/publishYalc.js",
    "publish:canary": "yarn lerna publish --no-verify-access --canary --exact --preid next.$(git rev-parse --short HEAD) --force-publish='*'",
    "publish:npm": "yarn lerna publish --conventional-commits",
    "prepare": "husky install"
  },
  "devDependencies": {
    "camelcase": "^6.2.0",
    "chalk": "^4.1.2",
    "fs-extra": "^9.0.0",
    "husky": "^6.0.0",
    "js-yaml": "^3.14.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.1.2",
    "prompts": "^2.4.0",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "standard-version": "^8.0.0",
    "svgo": "^2.8.0",
    "tslint-config-prettier": "^1.18.0",
    "yalc": "^1.0.0-pre.32"
  },
  "dependencies": {
    "lerna": "^3.18.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/elements-angular/elements/dist"
    ],
    "nohoist": [
      "**/@types/jasmine",
      "**/@types/jasminewd2",
      "**/@types/eslint",
      "**/@types/estree",
      "**/@types/eslint-scope",
      "**/flatpickr"
    ]
  },
  "name": "core",
  "version": "7.1.0"
}
